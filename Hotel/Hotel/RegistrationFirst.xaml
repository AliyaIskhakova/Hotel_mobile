<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Hotel.RegistrationFirst"
             BackgroundColor="#210E0D"
             NavigationPage.HasNavigationBar="False">
    <ContentPage.Resources>
        <Style TargetType="Frame">
            <Setter Property="Margin" Value="10, 5"></Setter>
            <Setter Property="Padding" Value="7, 0"></Setter>
            <Setter Property="CornerRadius" Value="15"></Setter>
        </Style>
    </ContentPage.Resources>
    <ContentPage.Content>
        <StackLayout Orientation="Vertical" VerticalOptions="Center" >
            <Label Text="РЕГИСТРАЦИЯ" Style="{StaticResource TitleLabel}" Margin="15"  />
            <Label Style="{StaticResource LabelMedium}" >Логин</Label>
            <Frame>
                <Entry x:Name="login"></Entry>
            </Frame>
            <Label Style="{StaticResource  LabelMedium}">Пароль</Label>
            <Frame>
                <Entry x:Name="password"></Entry>
            </Frame>
            <Button Margin="10" Text="Далее" Clicked="Button_Clicked"></Button>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>