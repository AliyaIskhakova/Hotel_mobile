<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Hotel.MainPage"
             BackgroundColor="#210E0D"
             NavigationPage.HasNavigationBar ="False" >
    <StackLayout VerticalOptions="Center" >
        <Label Style="{StaticResource TitleLabel}" >Авторизация</Label>
        <Label Style="{StaticResource AuthRegLabel}" >Логин</Label>
        <Entry Margin="10, 0" x:Name="loginEditor"></Entry>
        <Label Style="{StaticResource AuthRegLabel}" >Пароль</Label>
        <Entry Margin="10, 0" x:Name="passwordEditor" IsPassword="True" ></Entry>
        <Button Margin="10, 0" x:Name="SignInBtn" Text="Войти" Clicked="SignInBtn_Clicked"></Button>
        <Button Margin="10, 0" x:Name="RegictrationBtn" Text="Зарегистрироваться" Clicked="Button_Clicked"/>
    </StackLayout>
</ContentPage>
